/* pages/comment/comment.wxss */
.header {
  width: 100%;
  height: 150rpx;
  background: white;
  border-bottom: solid rgb(232, 232, 232) 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.left {
  margin-left: 40rpx;
}
.top {
  margin-top: 20rpx;
}
.button {
  height: 35%;
  width: 30%;
  border-radius: 8rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.chosenyes {
  background: rgb(255, 81, 0);
  color: white;
  font-size: 60%;
}
.chosenno {
  background: rgb(245, 245, 245);
  color: grey;
  font-size: 60%;
}
.body_every {
  height: 220rpx;
  width: 100%;
  background: white;
  border-bottom: solid rgb(232, 232, 232) 5rpx;
  display: flex;
  flex-direction: column;
}
.user {
  height: 30%;
  width: 100%;
  display: flex;
  align-items: center;
}
.user_img {
  height: 110%;
  width: 10%;
  border-radius: 5%;
}
.text {
  font-size: 60%;
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
}
.star_comment {
  display: flex;
  align-items: center;
}
.context_text {
  display: flex;
  align-items: center;
  color: grey;
  font-size: 60%;
}